; Maximum execution time of each script, in seconds
php_admin_value[max_execution_time] = 30
; Maximum amount of time each script may spend parsing request data
php_admin_value[max_input_time] = 60
; Maximum amount of memory a script may consume (8MB)
php_admin_value[memory_limit] = 8M
; Maximum size of POST data that PHP will accept.
php_admin_value[post_max_size] = 8M
; Whether to allow HTTP file uploads.
php_admin_value[file_uploads] = Off
; Maximum allowed size for uploaded files.
php_admin_value[upload_max_filesize] = 2M
; Do not expose PHP error messages to external users
php_admin_value[display_errors] = Off
; Turn on safe mode
php_admin_value[safe_mode] = On
; Only allow access to executables in isolated directory
php_admin_value[safe_mode_exec_dir] = php-required-executables-path
; Limit external access to PHP environment
php_admin_value[safe_mode_allowed_env_vars] = PHP_
; Restrict PHP information leakage
php_admin_value[expose_php] = Off
; Log all errors
php_admin_value[log_errors] = On
; Do not register globals for input data
php_admin_value[register_globals] = Off
; Minimize allowable PHP post size
php_admin_value[post_max_size] = 1K
; Ensure PHP redirects appropriately
php_admin_value[cgi.force_redirect] = 0
; Enable SQL safe mode
php_admin_value[sql.safe_mode] = On
; Avoid Opening remote files
php_admin_value[allow_url_fopen] = Off
; Avoid Opening remote files
php_admin_value[allow_url_include] = Off
